<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Payment\Domain\Model\Firm\Client\ClientParticipant" 
            table="ClientParticipant"
            repository-class="Payment\Infrastructure\Persistence\Doctrine\Repository\DoctrineClientParticipantRepository"
    >
        
        <many-to-one  field="client" 
                      target-entity="Payment\Domain\Model\Firm\Client"
        >
            <join-column name="Client_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        
        <one-to-one field="participant" 
                    target-entity="Payment\Domain\Model\Firm\Program\Participant"
        >
            <join-column name="Participant_id" referenced-column-name="id" />
        </one-to-one>
        
    </entity>
</doctrine-mapping>
