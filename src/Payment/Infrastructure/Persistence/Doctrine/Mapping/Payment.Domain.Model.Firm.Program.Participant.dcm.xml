<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Payment\Domain\Model\Firm\Program\Participant" 
            table="Participant"
    >
        
        <many-to-one  field="program" 
                      target-entity="Payment\Domain\Model\Firm\Program"
        >
            <join-column name="Program_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        <embedded name="status" class="SharedContext\Domain\ValueObject\ParticipantStatus" use-column-prefix="false" />
        <field name="programPrice" type="integer" nullable="true"/>
        
        <one-to-one field="participantInvoice" 
                    target-entity="Payment\Domain\Model\Firm\Program\Participant\ParticipantInvoice"
                    mapped-by="participant"
        >
            <cascade><cascade-persist /></cascade>
        </one-to-one>
        
    </entity>
</doctrine-mapping>
