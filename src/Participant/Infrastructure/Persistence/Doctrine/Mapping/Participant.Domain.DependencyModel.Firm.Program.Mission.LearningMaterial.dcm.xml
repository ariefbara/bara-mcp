<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Participant\Domain\DependencyModel\Firm\Program\Mission\LearningMaterial" 
            table="LearningMaterial"
            repository-class="Participant\Infrastructure\Persistence\Doctrine\Repository\DoctrineLearningMaterialRepository"
    >
        
        <many-to-one  field="mission" 
                      target-entity="Participant\Domain\DependencyModel\Firm\Program\Mission"
        >
            <join-column name="Mission_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        <field name="removed" type="boolean">
            <options><option name="default">0</option></options>
        </field>
        
    </entity>
</doctrine-mapping>
